#!/usr/bin/env python

import argparse
import getpass
import nacl.exceptions
from pw.core import Store


parser = argparse.ArgumentParser(
    description='Change master password.')

parser.add_argument('pw_file', help='password list')
args = parser.parse_args()

try:
    pw_store = Store(args.pw_file, getpass.getpass('Current password: '))
    pw_store.load()
    pw_store.password = getpass.getpass('New password: ')
    pw_store.save()

except (IOError, nacl.exceptions.CryptoError) as e:
    print e

except (KeyboardInterrupt, EOFError):
    print
