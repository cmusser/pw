#!/usr/bin/env python

import argparse
import getpass
import nacl.exceptions
from pw.core import Cli


parser = argparse.ArgumentParser(
    description='Change master password.')

parser.add_argument('pw_file', help='password list')
args = parser.parse_args()

try:
    cli = Cli(args.pw_file, getpass.getpass('Current password: '))
    cli.load()
    cli.password = getpass.getpass('New password: ')
    cli.save()

except (IOError, nacl.exceptions.CryptoError) as e:
    print e

except (KeyboardInterrupt, EOFError):
    print
