#!/usr/bin/env python

import argparse
import getpass
import nacl.exceptions
import os
import pw.data
import pw.file
import pw.util
from subprocess import Popen, PIPE


def lookup_credential(pw_data, search_term):

    n = 0
    names = pw.data.find(search_term, pw_data)
    for name in names:
        n += 1
        credential_data = pw_data[name]
        print "\n{}.) {}".format(n, name)

        for field in pw.data.fields:
            if field in credential_data:
                value = credential_data[field]
                print "{0:{1}} : {2}".format(field, pw.data.max_field_len,
                                             '*' * len(value)
                                             if (field == 'password'
                                                 and not args.display)
                                             else value)

    match_count = len(names)
    if match_count == 0:
        print 'no matches'
    else:
        if match_count == 1:
            name = names[0]
        else:
            name = names[pw.util.prompt_for_idx(names)]

        if os.uname()[0] == 'Darwin':
            clip_cmd = 'pbcopy'
        else:
            clip_cmd = ['xsel', '-b']

        try:
            clip_process = Popen(clip_cmd, stdin=PIPE)
            clip_process.communicate(pw_data[name]['password'])
            print "password copied to clipboard."
        except OSError as e:
            print '{} If UNIX, install "xsel".'.format(e)


parser = argparse.ArgumentParser(
    description='Look up password, store it in the system clipboard.')
parser.add_argument('--display', '-d', action='store_true',
                    help='display password (default: obscure)')
parser.add_argument('--list', '-l', action='store_true',
                    help='List credential names, then exit.')
parser.add_argument('pw_file', help='password list')
parser.add_argument('credential_name', nargs='?', default=None,
                    help='name of credential (if not specified, command '
                    'will prompt.')
args = parser.parse_args()

try:
    pw_data = pw.file.load(pw.file.path(args.pw_file), getpass.getpass())
    if args.list:
        for name in pw_data:
            print name
        print '\n{} credentials'.format(len(pw_data))
    else:
        if args.credential_name is None:
            pw.util.prompt_loop('pw', pw_data, lookup_credential)
        else:
            lookup_credential(pw_data, args.credential_name)

except (IOError, nacl.exceptions.CryptoError) as e:
    print e

except (KeyboardInterrupt, EOFError):
    print
