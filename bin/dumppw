#!/usr/bin/env python

import argparse
import getpass
import json
import nacl.exceptions
from pw.core import Store


parser = argparse.ArgumentParser(
    description='Dump as formatted JSON.')

parser.add_argument('pw_file', help='password list')
args = parser.parse_args()

try:
    pw_store = Store(args.pw_file, getpass.getpass())
    pw_store.load()
    print json.dumps(pw_store.data, sort_keys=True,
                     indent=4, separators=(',', ': '))

except (IOError, nacl.exceptions.CryptoError) as e:
    print e

except (KeyboardInterrupt, EOFError):
    print
