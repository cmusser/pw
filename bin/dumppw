#!/usr/bin/env python

import argparse
import getpass
import json
import nacl.exceptions
from pw.core import Cli


parser = argparse.ArgumentParser(
    description='Dump as formatted JSON.')

parser.add_argument('pw_file', help='password list')
args = parser.parse_args()

try:
    cli = Cli(args.pw_file, getpass.getpass())
    cli.load()
    print json.dumps(cli.pw_data, sort_keys=True,
                     indent=4, separators=(',', ': '))

except (IOError, nacl.exceptions.CryptoError) as e:
    print e

except (KeyboardInterrupt, EOFError):
    print
