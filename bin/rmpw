#!/usr/bin/env python

from pw.core import Cli, CliHelper


class RmPwHelper(CliHelper):

    def process_input(self, cli_input, name):

        if name:
            self.cli.data.pop(name, None)
            self.cli.save()
            print '{} removed'.format(name)
        else:
            print 'not found'

#
# Main program
#
parser = Cli.create_arg_parser('Remove credentials.')
args = parser.parse_args()
cli = Cli(args.pw_file)
cli.run('remove', RmPwHelper, args.credential_name)
