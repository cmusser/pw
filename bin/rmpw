#!/usr/bin/env python

import pw.cli
import pw.db


class RmPwHelper(pw.cli.CliHelper):

    def process_input(self, cli_input, name):

        if name:
            self.cli.data.pop(name, None)
            self.cli.save()
            print '{} removed'.format(name)
        else:
            print 'not found'

#
# Main program
#

parser = pw.cli.get_default_file_args('Remove credentials.')
args = parser.parse_args()
pw.cli.Cli().run('remove', RmPwHelper(),
                 pw.db.File(args.pw_file, pw.cli.pw_prompt),
                 args.credential_name)
