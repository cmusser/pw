#!/usr/bin/env python

from pw.core import Cli


def lookup_credential(cli, search_term):
    pw_store = cli.pw_store
    pw_store.load()
    name = cli.lookup_credential_for_edit(search_term)
    if name in pw_store.data:
        result = 'removed'
        pw_store.data.pop(name, None)
        pw_store.save()
    else:
        result = 'not found'

    print '{} {}'.format(name, result)

#
# Main program
#
parser = Cli.create_arg_parser('Remove credentials.')
args = parser.parse_args()
cli = Cli(args.pw_file)
cli.run('remove', lookup_credential, args.credential_name)
