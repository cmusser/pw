#!/usr/bin/env python

from pw.core import Cli, CliHelper


class RmPwHelper(CliHelper):

    def process_input(self, cli_input, name):

        if name:
            self.cli.data.pop(name, None)
            self.cli.save()
            print '{} removed'.format(name)
        else:
            print 'not found'

#
# Main program
#
Cli('Remove credentials.').run('remove', RmPwHelper)
