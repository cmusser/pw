#!/usr/bin/env python

from pw.core import Cli


def lookup_credential(cli, search_term):
    cli.pw_store.data.load()
    name = cli.pw_store.lookup_credential_for_edit(search_term)
    if name in cli.pw_store.data:
        result = 'removed'
        cli.pw_store.data.pop(name, None)
        cli.pw_store.data.save()
    else:
        result = 'not found'

    print '{} {}'.format(name, result)

#
# Main program
#
parser = Cli.create_arg_parser('Remove credentials.')
args = parser.parse_args()
cli = Cli(args.pw_file)
cli.run('remove', lookup_credential, args.credential_name)
