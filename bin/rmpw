#!/usr/bin/env python

from pw.core import Cli


def remove_credential(cli, search_term, name):

    if name:
        cli.data.pop(name, None)
        cli.save()
        print '{} removed'.format(name)
    else:
        print 'not found'

#
# Main program
#
parser = Cli.create_arg_parser('Remove credentials.')
args = parser.parse_args()
cli = Cli(args.pw_file)
cli.run('remove', lookup_credential, args.credential_name)
