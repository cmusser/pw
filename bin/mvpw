#!/usr/bin/env python

from pw.core import Cli, CliHelper


class MvPwHelper(CliHelper):

    def process_input(self, cli_input, name):

        if name:
            new_name = raw_input('new name: ')
            credential = cli.data.pop(name, None)
            cli.data[new_name] = credential
            cli.save()
            print '{} renamed to {}'.format(name, new_name)
        else:
            print 'not found'
#
# Main program
#

Cli('Rename credentials.').run('rename', MvPwHelper)
