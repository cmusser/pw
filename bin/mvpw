#!/usr/bin/env python

from pw.core import Cli


def lookup_credential(cli, search_term):
    name = cli.lookup_credential_for_edit(search_term)
    new_name = None
    if name in cli.data:
        new_name = raw_input('new name: ')
        credential = cli.data.pop(name, None)
        cli.data[new_name] = credential
        cli.save()
        result = 'renamed to {}'.format(new_name)

    else:
        result = 'not found'

    print '{} {}'.format(name, result)

#
# Main program
#
parser = Cli.create_arg_parser('Rename credentials.')
args = parser.parse_args()
cli = Cli(args.pw_file)
cli.run('rename', lookup_credential, args.credential_name)
